# Environment Configuration for SANGKURIANG Development

# Application Settings
APP_NAME=SANGKURIANG Crypto Audit Platform
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=True

# Security Settings
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://sangkuriang:sangkuriang123@localhost:5432/sangkuriang_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Payment Gateway Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=False
MIDTRANS_SANDBOX_URL=https://api.sandbox.midtrans.com

XENDIT_SECRET_KEY=your-xendit-secret-key
XENDIT_PUBLIC_KEY=your-xendit-public-key
XENDIT_WEBHOOK_TOKEN=your-xendit-webhook-token

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.py,.js,.java,.cpp,.c,.go,.rs,.ts
ALLOWED_IMAGE_TYPES=.jpg,.jpeg,.png,.gif,.webp

# Audit Engine Settings
AUDIT_TIMEOUT_SECONDS=300
MAX_PROJECT_SIZE_MB=50
GITHUB_CLONE_TIMEOUT=300
SECURITY_SCAN_ENABLED=True
PERFORMANCE_ANALYSIS_ENABLED=True
COMPLIANCE_CHECK_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
SMTP_FROM_EMAIL=noreply@sangkuriang.id
SMTP_FROM_NAME=SANGKURIANG Team

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
BINANCE_RPC_URL=https://bsc-dataseed.binance.org/
IPFS_GATEWAY_URL=https://gateway.pinata.cloud
IPFS_API_KEY=your-ipfs-api-key
IPFS_API_SECRET=your-ipfs-api-secret

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development

# Development Tools
HOT_RELOAD=True
DEBUG_TOOLBAR=True
SQL_ECHO=False
PROFILING_ENABLED=True

# Mobile App Configuration
MOBILE_API_KEY=your-mobile-api-key
MOBILE_DEEP_LINK_SCHEME=sangkuriang
MOBILE_PUSH_NOTIFICATION_ENABLED=True

# Security Headers
SECURITY_HEADERS_ENABLED=True
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# Testing Configuration
TEST_DATABASE_URL=postgresql://sangkuriang_test:sangkuriang123@localhost:5432/sangkuriang_test_db
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_PARALLEL_WORKERS=4
TEST_COVERAGE_THRESHOLD=80

# Deployment Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=sangkuriang/backend
KUBERNETES_NAMESPACE=sangkuriang
HELM_RELEASE_NAME=sangkuriang-api
INGRESS_CLASS=nginx
TLS_ENABLED=True
CERT_ISSUER=letsencrypt-prod